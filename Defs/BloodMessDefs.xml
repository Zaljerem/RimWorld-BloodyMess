<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <DamageDef>
    <defName>TD_BloodSplatterDamage</defName>
    <label>blood splatter</label>
    <harmsHealth>false</harmsHealth>
    <canInterruptJobs>false</canInterruptJobs>
		
    <explosionCellFleck>TD_BloodSplatterFleck</explosionCellFleck>
    <explosionColorEdge>(1, 1, 1, 0.05)</explosionColorEdge>
		
		<impactSoundType>Blunt</impactSoundType>
		<defaultDamage>1</defaultDamage>
  </DamageDef>
  
  <FleckDef ParentName="FleckBase">
    <defName>TD_BloodSplatterFleck</defName>
    <graphicData>
      <texPath>Things/Mote/FoodBitMeat</texPath>
      <shaderType>TransparentPostLight</shaderType>
      <renderInstanced>true</renderInstanced>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <solidTime>0</solidTime>
    <fadeOutTime>0.2</fadeOutTime>
  </FleckDef>


	<ThingDef>
		<category>Projectile</category>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Projectile</altitudeLayer>
		<thingClass>Bloody_Mess.ProjectileBlood</thingClass>
		<label>blood projectile</label>
		<useHitPoints>False</useHitPoints>
		<neverMultiSelect>True</neverMultiSelect>


		<defName>TD_ProjectileBlood</defName>
		<graphicData>
			<!-- Just like the filth -->
			<graphicClass>Graphic_Cluster</graphicClass>
			<shaderType>Transparent</shaderType>
			<texPath>Things/Filth/Spatter</texPath>
			<color>(131, 34, 34, 180)</color>
			<drawSize>(2, 2)</drawSize>
		</graphicData>
		<projectile>
			<damageDef>TD_BloodSplatterDamage</damageDef>
			<speed>20</speed>
			<arcHeightFactor>2</arcHeightFactor>
		</projectile>
	</ThingDef>




	<TraitDef>
		<defName>TD_BloodyMess</defName>
		<commonality>0</commonality> <!-- hardcoded random chance -->
		<degreeDatas>
			<li>
				<label>bloody mess</label>
				<description>By some strange twist of fate, people around killed by {PAWN_nameDef} die violently. You always see the worst way a person can die.</description>
			</li>
		</degreeDatas>
	</TraitDef>
</Defs>